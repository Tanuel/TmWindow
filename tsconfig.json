{
  "compilerOptions": {
    "rootDir": "src/ts",
    "module": "commonjs",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "target": "ES5",
    "declaration": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.d.ts",
    "./src/**/*.test.ts",
    "./src/**/*.spec.ts"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "public/typedoc",
    "readme": "Readme.md",
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeExternals": true
  }
}